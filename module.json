{
  "id": "tokencover",
  "title": "Alternative Token Cover",
  "version": "#{VERSION}#",
  "library": false,
  "socket": true,
  "compatibility": {
    "minimum": "13",
    "verified": "13.348"
  },
  "authors": [
    {
      "name": "caewok",
      "url": "https://github.com/caewok",
      "discord": "caewok"
    }
  ],
  "relationships": {
    "requires": [
      {
        "id": "lib-wrapper",
        "type": "module",
        "manifest": "https://raw.githubusercontent.com/ruipin/fvtt-lib-wrapper/master/module.json",
        "compatibility": {
          "verified": "1.13.3.0"
        }
      },

      {
        "id": "socketlib",
        "type": "module",
        "manifest": "https://raw.githubusercontent.com/manuelVo/foundryvtt-socketlib/master/module.json",
        "compatibility": {
          "verified": "1.1.3"
        }
      }
    ]
  },
  "esmodules": [
    "scripts/module.js"
  ],

  "packs": [
    {
      "name": "tokencover_macros",
      "label": "ATC Macros",
      "path": "packs/macros",
      "type": "Macro",
      "private": false
    },
    {
      "name": "tokencover_items_sfrpg",
      "label": "ATC Items",
      "path": "packs/items/sfrpg",
      "type": "Item",
      "private": false,
      "system": "sfrpg"
    },
    {
      "name": "tokencover_items_pf2e",
      "label": "ATC Items",
      "path": "packs/items/pf2e",
      "type": "Item",
      "private": false,
      "system": "pf2e"
    }
  ],

  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "languages/en.json",
      "title": "Alternative Token Cover",
      "description": "Alternative token cover rules"
    },
    {
      "lang": "ru",
      "name": "Русский",
      "path": "languages/ru.json"
    }
  ],

  "documentTypes": {
    "RegionBehavior": {
      "setCover": {}
    }
  },

  "url": "#{URL}#",
  "manifest": "#{MANIFEST}#",
  "download": "#{DOWNLOAD}#",
  "license": "LICENSE",
  "readme": "README.md"
}